<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profile_background"
    tools:context=".profile">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/goback"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:background="@drawable/go_back"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/profile"
            android:layout_marginHorizontal="70dp"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_weight="10"
            android:shadowColor="#FFEFCD"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:fontFamily="sans-serif-condensed-light"/>
        <Button
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@drawable/settings"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:id="@+id/pfp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="80dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/userr"
                    android:backgroundTint="@color/yellowish"/>
                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/full_name"
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:shadowColor="#FFEFCD"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/constraint"
                        android:padding="5dp"
                        android:elevation="4dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:gravity="center">
                        <Button
                            android:id="@+id/edit_profile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/edit_profile"
                            android:backgroundTint="@color/blueish"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/edit_profile"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:paddingBottom="10dp"
                            android:shadowColor="#52000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/constraint"
                        android:padding="5dp"
                        android:elevation="4dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/language"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/language"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/languages"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:paddingBottom="10dp"
                            android:shadowColor="#52000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/constraint"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true">
                        <Button
                            android:id="@+id/n"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/edit_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/edit_profile"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:paddingBottom="10dp"
                            android:shadowColor="#52000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/constraint"
                        android:padding="5dp"
                        android:elevation="4dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true">
                        <Button
                            android:id="@+id/logout"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/logout"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/log_out"
                            android:textSize="14sp"
                            android:textAllCaps="true"
                            android:paddingBottom="10dp"
                            android:shadowColor="#52000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="4"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/blueish"
        android:elevation="4dp"
        android:translationZ="2dp"
        android:layout_gravity="center"
        android:gravity="center">


        <Button
            android:id="@+id/list_requests"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/history"/>
        <Button
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginEnd="60dp"
            android:clickable="false"
            android:background="@drawable/profile"/>

    </LinearLayout>
</LinearLayout>